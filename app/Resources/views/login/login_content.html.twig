{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="login-background">
    <div class="login-container columns is-centered is-multiline">
        <form class="columns is-multiline is-centered has-text-centered" action="{{ path("fos_user_security_check") }}"
              method="post">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
            {% endif %}
            <div class="column is-full">
                <input class="input" placeholder="Username" type="text" id="username" name="_username"
                       value="{{ last_username }}" required="required"
                       autocomplete="username"/>
            </div>
            <div class="column is-full">
                <input class="input" placeholder="Password" type="password" id="password" name="_password"
                       required="required" autocomplete="current-password"/>
            </div>
            <div class="column is-full">
                <input class="button is-primary" type="submit" id="_submit" name="_submit" value="Login"
                style="width: 100%"/>
            </div>
        </form>
    </div>
</div>

{% block stylesheets %}
    <style>
        div.login-container {
            background-color: white;
            padding: 1.5em;
            border-radius: 10px;
            width: 20em;
            transform: scale(1);
        }

        div.login-background {
            background: linear-gradient(to bottom, #000000AA 40%, #000000AA 200%) center,  url({{ asset('images/login-background.jpg') }}) center;
            background-size: 120%;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }
    </style>
{% endblock %}
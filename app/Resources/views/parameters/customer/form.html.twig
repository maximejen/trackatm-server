<div class="form-element">
    <div class="subtitle form-label">
        {{ form_label(form.name) }}
    </div>
    <div>
        {{ form_widget(form.name, {
            'attr': {
                'class': 'input',
                'placeholder': 'Customer\'s name'
            }
        }) }}
    </div>
</div>
<div class="form-element">
    <div class="subtitle form-label">
        {{ form_label(form.email) }}
    </div>
    <div>
        {{ form_widget(form.email, {
            'attr': {
                'class': 'input',
                'placeholder': 'Customer\'s email'
            }
        }) }}
    </div>
</div>
<div class="form-element">
    <div class="subtitle form-label">
        {{ form_label(form.color) }}
    </div>
    <div>
        {{ form_widget(form.color, {
            'type': 'color',
            'attr': {
                'class': 'input',
                'placeholder': 'Customer\'s color'
            }
        }) }}
    </div>
</div>
<div class="form-element">
    <div class="subtitle form-label">
        {{ form_label(form.numberMaxOfOperations) }}
    </div>
    <div>
        {{ form_widget(form.numberMaxOfOperations, {
            'attr': {
                'class': 'input'
            }
        }) }}
    </div>
</div>